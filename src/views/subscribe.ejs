<%- include('partials/header', { title, active: 'subscribe' }) %>

<div class="page-header">
  <div class="container">
    <h1>ðŸ“¬ Subscribe to NL Grocery Deals</h1>
    <p>Get the best grocery deals delivered to your inbox daily â€” it's free!</p>
  </div>
</div>

<section class="section">
  <div class="container" style="max-width: 600px;">
    
    <% if (success) { %>
    <div class="alert alert-success">
      <i class="fas fa-check-circle"></i>
      <strong>Success!</strong> You're now subscribed to NL Grocery Deals! Check your inbox for a welcome email.
    </div>
    <% } %>
    
    <% if (error) { %>
    <div class="alert alert-error">
      <i class="fas fa-exclamation-circle"></i>
      <strong>Error:</strong> <%= error %>
    </div>
    <% } %>
    
    <div class="card">
      <div class="card-body p-4">
        <h2 style="margin-bottom: 20px;">Join Our Newsletter</h2>
        
        <form action="/subscribe" method="POST" data-validate>
          <div class="form-group">
            <label class="form-label" for="email">Email Address *</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="your@email.com" required>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="first_name">First Name (optional)</label>
            <input type="text" id="first_name" name="first_name" class="form-control" placeholder="John">
          </div>
          
          <div class="form-group">
            <label class="form-label" for="last_name">Last Name (optional)</label>
            <input type="text" id="last_name" name="last_name" class="form-control" placeholder="Smith">
          </div>
          
          <div class="form-group">
            <label class="form-label" for="region">Your Region</label>
            <select id="region" name="region" class="form-control">
              <option value="All">All Regions (Province-wide)</option>
              <option value="Avalon">Avalon Peninsula (St. John's area)</option>
              <option value="Central">Central NL (Gander, Grand Falls-Windsor)</option>
              <option value="Western">Western NL (Corner Brook area)</option>
              <option value="Labrador">Labrador</option>
            </select>
            <small class="text-muted">We'll prioritize deals from stores in your region</small>
          </div>
          
          <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;">
            <i class="fas fa-paper-plane"></i> Subscribe Free
          </button>
        </form>
        
        <p class="text-muted text-center mt-3" style="font-size: 13px;">
          <i class="fas fa-lock"></i>
          We respect your privacy. Unsubscribe anytime.
        </p>
      </div>
    </div>
    
    <!-- Benefits -->
    <div class="mt-4">
      <h3>What You'll Get:</h3>
      <ul style="list-style: none; padding: 0;">
        <li style="padding: 10px 0; border-bottom: 1px solid var(--border-color);">
          <i class="fas fa-check text-success"></i> 
          <strong>Daily deals</strong> from Dominion, Sobeys, Colemans, Walmart, Costco & more
        </li>
        <li style="padding: 10px 0; border-bottom: 1px solid var(--border-color);">
          <i class="fas fa-check text-success"></i> 
          <strong>Loyalty point bonuses</strong> â€” PC Optimum & Scene+ offers
        </li>
        <li style="padding: 10px 0; border-bottom: 1px solid var(--border-color);">
          <i class="fas fa-check text-success"></i> 
          <strong>Region-specific deals</strong> relevant to your area
        </li>
        <li style="padding: 10px 0; border-bottom: 1px solid var(--border-color);">
          <i class="fas fa-check text-success"></i> 
          <strong>Shopping tips</strong> to save even more money
        </li>
        <li style="padding: 10px 0;">
          <i class="fas fa-check text-success"></i> 
          <strong>Store updates</strong> â€” new openings, renovations & hours
        </li>
      </ul>
    </div>
  </div>
</section>

